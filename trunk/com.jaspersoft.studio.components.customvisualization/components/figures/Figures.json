{
    "label": "Figures", 
    "description": "Display a list of figures",
    "module":"figures",
    "thumbnail": "Figures.png",
    "sections": [
            {
              "name": "Script",
              "expandable" : "true",
              "properties": [
                {
                  "name": "script",
                  "label": "Script Path",
                  "description": "Script path",
                  "mandatory": "true",
                  "type": "PATH",
                  "defaultValue":"figures.min.js",
                  "readOnly": "false"
                },
                {
                  "name": "css",
                  "label": "CSS Path",
                  "description": "CSS path",
                  "mandatory": "true",
                  "defaultValue": "figures.css",
                  "type": "PATH",
                  "readOnly": "false"
                },
                {
                  "name": "module",
                  "label": "module",
                  "description": "module",
                  "mandatory": "true",
                  "defaultValue": "figures",
                  "type": "TEXT",
                  "readOnly": "true"
                }
              ]
            },
            {
              "name": "Data",
              "expandable" : "true",
              "properties": [
                {
                  "name": "itemsValue",
                  "label": "Items Value",
                  "description": "The number of selected values.",
                  "mandatory": "false",
                  "type": "double",
                  "defaultValue":"1"
                },
                {
                  "name": "itemsCount",
                  "label": "Items Count",
                  "description": "The number of phantom figures.",
                  "mandatory": "false",
                  "type": "double",
                  "defaultValue":"1"
                },
                {
                  "name": "figure",
                  "label": "Figure",
                  "description": "Male, Female, Custom",
                  "mandatory": "true",
                  "type": "combo",
                  "options": ["Male","Female","Custom"], 
                  "defaultValue":"Male"
                },
                {
                  "name": "customPath",
                  "label": "Custom Path",
                  "description": "An SVG Path Data to form the figure to display",
                  "mandatory": "false",
                  "type": "text",
                  "defaultValue":""
                },
                {
                  "name": "figureColor",
                  "label": "Selection Color",
                  "description": "The color used for selected items.",
                  "mandatory": "false",
                  "type": "color",
                  "defaultValue":"#000000"
                },
                {
                  "name": "figureOpacity",
                  "label": "Selection Opacity",
                  "description": "The opacity used for selected items.",
                  "mandatory": "false",
                  "type": "float",
                  "defaultValue":"1",
                  "min":"0",
                  "max":"1"
                },
                {
                  "name": "showPhantom",
                  "label": "Show Phantom Figures",
                  "description": "Shows the phantom figures accordingly to items count",
                  "mandatory": "false",
                  "type": "combo",
                  "options": ["true","false"], 
                  "defaultValue":"true"
                },
                {
                  "name": "phantomColor",
                  "label": "Phantom Color",
                  "description": "The color used for phantom items.",
                  "mandatory": "false",
                  "type": "color",
                  "defaultValue":"#0000000"
                },
                {
                  "name": "phantomOpacity",
                  "label": "Phantom Opacity",
                  "description": "The opacity used for phantom items.",
                  "mandatory": "false",
                  "type": "float",
                  "defaultValue":"0.2",
                  "min":"0",
                  "max":"1"
                }
              ]
            },
            {
              "name": "Grid",
              "expandable" : "true",
              "properties": [
                {
                  "name": "rows",
                  "label": "Rows (optional)",
                  "description": "Layout the figures using this number of rows",
                  "mandatory": "false",
                  "type": "integer",
                  "defaultValue":"0"
                },
                {
                  "name": "columns",
                  "label": "Columns (optional)",
                  "description": "Layout the figures using this number of columns",
                  "mandatory": "false",
                  "type": "integer",
                  "defaultValue":"0"
                },
                {
                  "name": "maximizeColumnNumber",
                  "label": "Maximize cols number",
                  "description": "Fill the columns as many as fit the based the number of rows.",
                  "mandatory": "false",
                  "type": "combo",
                  "options": ["","true","false"], 
                  "defaultValue":"true"
                },
                {
                  "name": "vAlign",
                  "label": "Verical Alignment",
                  "description": "Vertical Alignment of the overall set of figures",
                  "mandatory": "false",
                  "type": "combo",
                  "options": ["top","middle","bottom"], 
                  "defaultValue":"top"
                },
                {
                  "name": "hAlign",
                  "label": "Horizontal Alignment",
                  "description": "Horizontal Alignment of the overall set of figures",
                  "mandatory": "false",
                  "type": "combo",
                  "options": ["left","center","right"], 
                  "defaultValue":"left"
                },
                {
                  "name": "hPadding",
                  "label": "Horizontal Padding",
                  "description": "The space between figures",
                  "mandatory": "false",
                  "type": "integer",
                  "defaultValue":"10"
                },
                {
                  "name": "vPadding",
                  "label": "Vertical Padding",
                  "description": "The space between figures",
                  "mandatory": "false",
                  "type": "integer",
                  "defaultValue":"10"
                }
                  
              ]
            }
  ]
}