{
    "label": "Range Value Marker",
    "description": "A chart customizer for XY Charts",
    "customizerClass": "com.jaspersoft.jasperreports.chartcustomizers.RangeValueMarkerCustomizer",
    "supportedPlot": ["13","14","15"],
    "sections": [
        {
            "name": "Customizer configuration",
            "expandable": false,
            "properties": [
                {
                    "name": "value-value",
                    "label": "Value",
                    "description": "The value",
                    "mandatory": true,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "double"
                },
                {
                    "name": "label",
                    "label": "Label",
                    "description": "The content of the label",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "text"
                },
                {
                    "name": "label-position",
                    "label": "Label Position",
                    "description": "The position of the label",
                    "mandatory": false,
                    "defaultValue": "top-left",
                    "readOnly": false,
                    "type": "selectable_combo",
                    "comboOptions": [["top","Top"],["top-left","Top Left"],["top-right", "Top Right"],["bottom","Bottom"],["bottom-left","Bottom Left"],["bottom-right","Bottom Right"],["center","Center"],["left","Left"],["right","Right"]]
                },
                {
                    "name": "label-position-offset",
                    "label": "Label Position Offset",
                    "description": "The offset of the label, you can provide more numeric value separated with a comma",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "text"
                },
                {
                    "name": "color",
                    "label": "Color",
                    "description": "The marker color",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "color"
                },
                {
                    "name": "alpha",
                    "label": "Alpha",
                    "description": "The marker transparency, must be between 0 and 1",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "float",
                    "max": "1",
                    "min": "0"
                },
                {
                    "name": "stroke-width",
                    "label": "Stroke Width",
                    "description": "The width of the stroke",
                    "mandatory": false,
                    "defaultValue": "0",
                    "readOnly": false,
                    "type": "float",
                    "min": "0"
                },
                {
                    "name": "stroke-style",
                    "label": "Stroke Style",
                    "description": "The width of the stroke",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "selectable_combo",
                    "comboOptions": [["STROKE_SOLID","Solid"],["STROKE_DOTTED", "Dotted"],["STROKE_DASHED","Dashed"]]
                }
            ]
        }
    ]
}