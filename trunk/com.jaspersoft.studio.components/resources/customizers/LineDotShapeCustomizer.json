{
    "label": "Line Dot Shape",
    "description": "Allow to define the shape and size of the dot items for the line charts",
    "customizerClass": "com.jaspersoft.jasperreports.chartcustomizers.LineDotShapeCustomizer",
    "supportedPlot": ["13","14","15","1","2","3","7","8","11","12","20","21"],
    "sections": [
        {
            "name": "Customizer configuration",
            "expandable": false,
            "properties": [
				{
                    "name": "lineDotItemIndexKey",
                    "label": "Series Item Index",
                    "description": "The index of the series dot item that will be changed",
                    "mandatory": false,
                    "defaultValue": "1",
                    "readOnly": false,
                    "type": "integer"
                },
               	{
                    "name": "lineDotItemSeriesKey",
                    "label": "Series Name",
                    "description": "The series associated to the legend item",
                    "mandatory": false,
                    "readOnly": false,
                    "type": "text"
                },
               	{
                    "name": "allLineDotItems",
                    "label": "Apply to all series",
                    "description": "Apply to all the series dot items",
                    "mandatory": false,
                    "readOnly": false,
                    "type": "checkbox_selector"
                },
                {
                    "name": "lineDotShapeDefinition",
                    "label": "Shape",
                    "description": "Specify the points of the shape",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "shape"
                },
                {
                    "name": "lineDotShapeWidth",
                    "label": "Width",
                    "description": "The width of the shape",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "integer"
                },
                {
                    "name": "lineDotShapeHeight",
                    "label": "Height",
                    "description": "Specify the height of the shape",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "integer"
                }  
            ]
        }
    ]
}