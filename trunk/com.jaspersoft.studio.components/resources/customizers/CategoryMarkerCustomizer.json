                    "defaultValue": "center",
                    "readOnly": false,
                    "type": "selectable_combo",
                    "comboOptions": [["baselineCenter","Baseline"],["baselineLeft","Baseline Left"],["baselineRight", "Baseline Right"],["bottomCenter","Bottom"],["bottomLeft","Bottom Left"],["bottomRight","Bottom Right"],["center","Center"],["centerLeft","Center Left"],["centerRight","Center Right"],["halfAscentCenter","Half Ascent"],["halfAscentLeft","Half Ascent Left"],["halfAscentRight", "Half Ascent Right"],["topCenter","Top"],["topLeft","Top Left"],["topRight", "Top Right"]]
