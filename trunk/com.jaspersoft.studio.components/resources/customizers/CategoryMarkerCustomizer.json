{
    "label": "Category Marker",
    "description": "A chart customizer for Category Charts",
    "customizerClass": "net.sf.jasperreports.customizers.marker.CategoryMarkerCustomizer",
    "supportedPlot": ["1","2","3","7","8","11","12","20","21"],
    "sections": [
        {
            "name": "Customizer configuration",
            "expandable": false,
            "properties": [
                {
                    "name": "category",
                    "label": "Category",
                    "description": "The key of the category",
                    "mandatory": true,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "text"
                },
                {
                    "name": "drawAsLine",
                    "label": "Draw as a Line",
                    "description": "The type of drawing used for the marker",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "checkbox_selector"
                },
                {
                    "name": "label",
                    "label": "Label",
                    "description": "The content of the label",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "text"
                },
                {
                    "name": "labelAnchor",
                    "label": "Label Anchor",
                    "description": "The anchor of the label",
                    "mandatory": false,
                    "defaultValue": "top-left",
                    "readOnly": false,
                    "type": "selectable_combo",
                    "comboOptions": [["top","Top"],["topLeft","Top Left"],["topRight", "Top Right"],["bottom","Bottom"],["bottomLeft","Bottom Left"],["bottomRight","Bottom Right"],["center","Center"],["left","Left"],["right","Right"]]
                },
                {
                    "name": "labelTextAnchor",
