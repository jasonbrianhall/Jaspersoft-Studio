                    "mandatory": false,
                    "defaultValue": "3.0d",
                    "readOnly": false,
                    "type": "double"
                },
                {
                    "name": "labelOffsetLeft",
                    "label": "Label Position Offset Left",
                    "description": "The left offset of the label",
                    "mandatory": false,
                    "defaultValue": "3.0d",
                    "readOnly": false,
                    "type": "double"
                },
                {
                    "name": "labelOffsetBottom",
                    "label": "Label Position Offset Bottom",
                    "description": "The bottom offset of the label",
                    "mandatory": false,
                    "defaultValue": "3.0d",
                    "readOnly": false,
                    "type": "double"
                },
                {
                    "name": "labelOffsetRight",
                    "label": "Label Position Offset Right",
                    "description": "The right offset of the label",
                    "mandatory": false,
                    "defaultValue": "3.0d",
                    "readOnly": false,
                    "type": "double"
                },
                {
                    "name": "color",
                    "label": "Color",
                    "description": "The marker color",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "color"
                },
                {
                    "name": "alpha",
                    "label": "Alpha",
                    "description": "The marker transparency, must be between 0 and 1",
                    "mandatory": false,
                    "defaultValue": "",
                    "readOnly": false,
                    "type": "float",
                    "max": "1",
                    "min": "0"
                },
                {
                    "name": "strokeWidth",
                    "label": "Stroke Width",
                    "description": "The width of the stroke",
                    "mandatory": false,
                    "defaultValue": "0",
                    "readOnly": false,
                    "type": "float",
                    "min": "0"
                },
                {
                    "name": "strokeStyle",
