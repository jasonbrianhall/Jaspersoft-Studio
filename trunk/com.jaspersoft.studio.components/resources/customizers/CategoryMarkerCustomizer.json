                {
                    "name": "isItalic",
                    "label": "Italic",
                    "description": "Check if the font should be italic",
                    "mandatory": false,
                    "defaultValue": "false",
                    "readOnly": false,
                    "type": "checkbox_selector"
                }
            ]
        }
    ]
}