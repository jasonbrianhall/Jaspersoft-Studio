<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="resourceInput" name="resourceInput" schema="schema/resourceInput.exsd"/>
   <extension-point id="resourceSender" name="resourceSender" schema="schema/resourceSender.exsd"/>
   <extension-point id="resourceFactory" name="resourceFactory" schema="schema/resourceFactory.exsd"/>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="%editor.rbe"
            icon="icons/propertiesfile.gif"
            extensions="properties"
            class="com.essiembre.eclipse.rbe.ui.editor.ResourceBundleEditor"
            contributorClass="com.essiembre.eclipse.rbe.ui.editor.ResourceBundleEditorContributor"
            id="com.essiembre.eclipse.rbe.ui.editor.ResourceBundleEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="%wizard.rb"
            id="com.essiembre.eclipse.i18n.resourcebundle">
      </category>
      <wizard
            name="ResourceBundle"
            icon="icons/resourcebundle.gif"
            category="com.essiembre.eclipse.i18n.resourcebundle"
            class="com.essiembre.eclipse.rbe.ui.wizards.ResourceBundleWizard"
            id="com.essiembre.eclipse.rbe.ui.wizards.ResourceBundleWizard">
            <description> 
               %wizard.description 
            </description> 
      </wizard>
      <wizard
            category="com.essiembre.eclipse.i18n.resourcebundle"
            class="com.jaspersoft.translation.wizard.TranslateBundleWizard"
            icon="icons/newpropertiesfile.gif"
            id="com.essiembre.eclipse.rbe.ui.wizards.TranslateBundleWizard"
            name="%wizard.tb">
      </wizard>
      <wizard
            category="com.essiembre.eclipse.i18n.resourcebundle"
            class="com.jaspersoft.translation.wizard.TranslationProjectWizard"
            icon="icons/language-document.png"
            id="com.essiembre.eclipse.rbe.ui.wizards.TranslationProjectWizard"
            name="%wizard.tp">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%editor.rbe"
            class="com.essiembre.eclipse.rbe.ui.preferences.RBEGeneralPrefPage"
            id="com.essiembre.eclipse.rbe.ui.preferences.RBEGeneralPrefPage">
      </page>
      <page
            class="com.essiembre.eclipse.rbe.ui.preferences.RBEFormattingPrefPage"
            category="com.essiembre.eclipse.rbe.ui.preferences.RBEGeneralPrefPage"
            name="%prefs.formatting"
            id="com.essiembre.eclipse.rbe.ui.preferences.RBEFormattingPrefPage"/>
      <page
            class="com.essiembre.eclipse.rbe.ui.preferences.RBEReportingPrefPage"
            category="com.essiembre.eclipse.rbe.ui.preferences.RBEGeneralPrefPage"
            name="%prefs.performance"
            id="com.essiembre.eclipse.rbe.ui.preferences.RBEReportingPrefPage"/>
   </extension>
   
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.essiembre.eclipse.rbe.ui.preferences.RBEPreferenceInitializer">
      </initializer>
   </extension>


   <extension point="org.eclipse.ui.themes">
    <themeElementCategory
        id="com.essiembre.eclipse.rbe.ui.preferences.themeElementCategory"
        label="Resource Bundle Editor">
    </themeElementCategory>
    <fontDefinition
        categoryId="com.essiembre.eclipse.rbe.ui.preferences.themeElementCategory"
        id="com.essiembre.eclipse.rbe.ui.preferences.fontDefinition"
        label="Properties editor font"
        defaultsTo="org.eclipse.jface.textfont">
        <description>
            The font for the editors on the properties tab
        </description>
    </fontDefinition>
</extension>
   <extension
         id="translationNature"
         name="Translation Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.jaspersoft.translation.resources.TranslationProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/translation_project_icon.png"
            id="com.essiembre.translation.natureImage"
            natureId="com.essiembre.eclipse.i18n.resourcebundle.translationNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=export">
         <command
               commandId="com.essiembre.eclipse.i18n.resourcebundle.command.sendTranslationAction"
               icon="icons/language-send.png"
               id="com.essiembre.eclipse.i18n.resourcebundle.sendTranslationAction"
               label="%popup.st"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <test
                        forcePluginActivation="true"
                        property="com.jaspersoft.translation.action.checkNature">
                  </test>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.essiembre.eclipse.i18n.resourcebundle.command.sendTranslationAction"
            name="sendTranslationCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.jaspersoft.translation.action.NatureTester"
            id="testNature"
            namespace="com.jaspersoft.translation.action"
            properties="checkNature"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.jaspersoft.translation.action.SendTranslationCommand"
            commandId="com.essiembre.eclipse.i18n.resourcebundle.command.sendTranslationAction">
      </handler>
   </extension>
   <extension
         point="com.essiembre.eclipse.i18n.resourcebundle.resourceFactory">
      <factory
            class="com.essiembre.eclipse.rbe.ui.editor.resources.StandardResourceFactory"
            order="9999">
      </factory>
      <factory
            class="com.essiembre.eclipse.rbe.ui.editor.resources.FragmentResourceFactory"
            order="1">
      </factory>
      <factory
            class="com.essiembre.eclipse.rbe.ui.editor.resources.NLResourceFactory"
            order="2">
      </factory>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="context.xml"
            plugin="com.essiembre.eclipse.i18n.resourcebundle">
      </contexts>
   </extension>
      <extension
         point="com.essiembre.eclipse.i18n.resourcebundle.resourceInput">
      <input
            class="com.essiembre.eclipse.rbe.messages.ResourcePublisher">
      </input>
   </extension>
</plugin>
