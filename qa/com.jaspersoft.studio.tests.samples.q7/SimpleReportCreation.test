------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

with [get-view "Project Explorer"] {
    click
    get-tree | select MyReports | get-menu "New/Jasper Report" | click
}
with [get-window "New Report Wizard"] {
    with [get-canvas] {
        mouse-press 453 263 button1
        mouse-release 453 263 button1 524288
        mouse-move 421 351
    }
    get-button "Next >" | click
    get-editbox -after [get-label "File name:"] | set-text "SimpleReport.jrxml"
    get-button "Next >" | click
    get-combo -after [get-label "Data Adapter"] | select "Sample DB - Database JDBC Connection"
    get-text-viewer | type-text "select * from orders"
    get-button "Next >" | click
    with [get-table] {
        select ORDERID | double-click
        select ORDERDATE | double-click
        select SHIPPEDDATE | double-click
        select SHIPVIA | double-click
        select FREIGHT | double-click
        select SHIPNAME | double-click
        select SHIPADDRESS | click -default
        select SHIPCITY | double-click
        select SHIPREGION | click -default
        select SHIPPOSTALCODE | double-click
        select SHIPCOUNTRY | click -default
    }
    get-table -index 1 | select FREIGHT | double-click
    get-button "Next >" | click
    get-table | select SHIPCOUNTRY | double-click
    get-button "Use the group fields as sort fields. Select this option if you want to aggregate all the group fields with the same value and not only the consecutive ones" 
        | check
    get-button "Next >" | click
    get-button Finish | click
}
get-editor "SimpleReport.jrxml" | get-tab-folder | get-tab-item Preview | click
get-editor "SimpleReport.jrxml" | close

